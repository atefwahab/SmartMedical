<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wmad.iti.medicalassisstantfinal.RegisterActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1DE9B6"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />
    <LinearLayout

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:focusable="true"
        android:background="#ffffff"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignLeft="@+id/my_toolbar"
        android:layout_alignStart="@+id/my_toolbar">


    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Email :"
            android:id="@+id/textView3"
            android:layout_weight="3"
            android:gravity="center" />

        <EditText

            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:id="@+id/emailEditText"
            android:hint="Enter Email" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="First name :"
            android:id="@+id/textView4"
            android:layout_weight="3"
            android:gravity="center" />

        <EditText
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/firstnameEditText"
            android:layout_weight="7"
            android:hint="Enter First Name" />

    </LinearLayout>


    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Last Name :"
            android:id="@+id/textView5"
            android:layout_weight="3"
            android:gravity="center" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/lastnameEditText"
            android:layout_weight="7"
            android:hint="Enter Last Name" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Password :"
            android:id="@+id/textView6"
            android:layout_weight="3"
            android:gravity="center" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/firstPasswordEditText"
            android:layout_weight="7"
            android:hint="Enter Password" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Password :"
            android:id="@+id/textView7"
            android:layout_weight="3"
            android:gravity="center" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/secondPasswordEditText"
            android:layout_weight="7"
            android:hint="Rewrite Password" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Birthday :"
                android:id="@+id/textView8"
                android:layout_weight="3"
                android:gravity="center" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/birthdayEditText"
                android:layout_weight="7"
                android:hint="Enter Birthday"
                 />

        </LinearLayout>


    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="gender :"
            android:id="@+id/textView9"
            android:layout_weight="3"
            android:gravity="center" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/genderSpinner"
            android:layout_weight="7"
            android:spinnerMode="dropdown"
            />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Register"
            android:id="@+id/registerButton"
            android:layout_weight="1" />


    </LinearLayout>
</RelativeLayout>
